<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">To do List</h1>
      <p class="text-center lead">Crie ou edite sua tarefa abaixo.</p>

      <%- include('includes/messages') %>

      <% if(tarefa._id) { %>
      <form action="/tarefa/edit/<%= tarefa._id %>" method="POST">
      <% } else { %>
      <form action="/tarefa/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Titulo</label>
          <input value="<%= tarefa.titulo %>" type="text" class="form-control" name="titulo">
        </div>
        <div class="form-group">
          <label>Resumo</label>
          <input value="<%= tarefa.resumo %>" type="text" class="form-control" name="resumo">
        </div>
        <div class="form-group">
          <label>Para dia</label>
          <input value="<%= tarefa.paraDia %>" type="date" class="form-control" name="paraDia">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>


    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
